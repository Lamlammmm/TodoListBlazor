@page "/TaskList"
@using TodoList.Models.Enums
@using TodoList.BlazorApp.Components.ComponentLayouts
@rendermode InteractiveServer

<h3>TodoList</h3>
@if(Tasks == null)
{
    <LoadingIndicator></LoadingIndicator>
}
else
{
    <div class="row">
        <EditForm Model="TaskListSearch" OnSubmit=@SearchForm FormName="SearchForm">
            <div class="row">
                <div class="col">
                    <label>Name</label>
                    <InputText class="form-control" @bind-Value="@TaskListSearch.Name"/>
                </div>
                <div class="col">
                    <label>Assignee</label>
                    <InputSelect class="form-control" @bind-Value="@TaskListSearch.AssigneeId">
                        <option>Select an assignee</option>
                        @foreach (var item in Assignees)
                        {
                            <option value="@item.Id">@item.FullName</option>
                        }
                    </InputSelect>
                </div>
                <div class="col">
                    <label>Priority</label>
                    <InputSelect class="form-control" @bind-Value="@TaskListSearch.Priority">
                        <option>Select a priority</option>
                        @foreach (var item in Enum.GetNames(typeof(Priority)))
                        {
                            <option value="@item">@item</option>
                        }
                    </InputSelect>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary mt-4">Search</button>
                </div>
                <div class="col">
                    <a href="/TaskCreate" class="btn btn-success mt-4">Create</a>
                </div>
            </div>
        </EditForm>
    </div>

    <div class="row mt-4">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Priority</th>
                    <th>Assignee</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Tasks)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td><PriorityLabel Priority="@item.Priority"></PriorityLabel></td>
                        <td>@item.AssigneeName</td>
                        <td>@item.CreatedDate.ToString("dd/MM/yyyy hh:mm")</td>
                        <td><StatusLabel Status="@item.Status"></StatusLabel></td>
                        <td>
                            <a href="/taskDetail/@item.Id" class="btn btn-info">Details</a>
                            <a href="/taskEdit/@item.Id" class="btn btn-primary">Edit</a>
                            <button class="btn btn-danger" @onclick="() => DeleteTask(item.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
