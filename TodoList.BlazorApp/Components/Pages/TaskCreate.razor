@page "/TaskCreate"
@using TodoList.Models
@using TodoList.Models.Enums
@using TodoList.BlazorApp.Services
@inject ITaskApiClient TaskApiClient
@inject NavigationManager NavigationManager

<h3>TaskCreate</h3>
<EditForm Model="taskRequest" OnValidSubmit="SubmitTask" FormName="TaskCreate">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label for="Name">Name</label>
        <InputText class="form-control" @bind-Value="taskRequest.Name"></InputText>
        <small id="Name" class="form-text text-muted">Enter task title here.</small>
        <ValidationMessage For="() => taskRequest.Name" />
    </div>
    <div class="form-group">
        <label>Priority</label>
        <InputSelect class="form-control" @bind-Value="@taskRequest.Priority">
            <option>Select a priority</option>
            @foreach (var item in Enum.GetNames(typeof(Priority)))
            {
                <option value="@item">@item</option>
            }
        </InputSelect>
        <small id="Name" class="form-text text-muted">Choose a priority.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>
@code {
    [SupplyParameterFromForm]
    private TaskRequest taskRequest { get; set; }
    protected override async Task OnInitializedAsync()
    {
        taskRequest ??= new();
    }
    private async Task SubmitTask(EditContext editContext)
    {
        var result = await TaskApiClient.CreateTask(taskRequest);
        if (result)
        {
            NavigationManager.NavigateTo("/TaskList");
        }
    }
}
