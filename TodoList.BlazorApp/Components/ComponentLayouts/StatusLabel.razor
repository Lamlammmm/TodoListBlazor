@using TodoList.Models.Enums

@switch (Status)
{
    case Status.Open:
        <span class="badge bg-primary">@nameof(Status.Open)</span>
        break;

    case Status.InProgress:
        <span class="badge bg-secondary">@nameof(Status.InProgress)</span>
        break;

    case Status.Resolved:
        <span class="badge bg-info text-dark">@nameof(Status.Resolved)</span>
        break;

    case Status.Done:
        <span class="badge bg-success">@nameof(Status.Done)</span>
        break;

    case Status.Canceled:
        <span class="badge bg-warning text-dark">@nameof(Status.Canceled)</span>
        break;

    case Status.Cloused:
        <span class="badge bg-danger">@nameof(Status.Cloused)</span>
        break;
}

@code {
    [Parameter]
    public Status Status { get; set; }
}
