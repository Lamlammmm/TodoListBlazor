@using TodoList.Models.Enums

@switch (Priority)
{
    case Priority.Low:
        <span class="badge bg-primary">@nameof(Priority.Low)</span>
        break;

    case Priority.Medium:
        <span class="badge bg-warning">@nameof(Priority.Medium)</span>
        break;

    case Priority.High:
        <span class="badge bg-success">@nameof(Priority.High)</span>
        break;
}

@code {
    [Parameter]
    public Priority Priority { get; set; }
}
